{
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "moduleResolution": "node",
    "types": ["node", "dotenv"],
    "allowJs": true,
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "paths": {
      "@domain/*": [
        "src/domain/*"
      ],
      "@enum/*": [
        "src/enum/*"
      ],
      "@interface/*": [
        "src/interface/*"
      ],
      "@middleware/*": [
        "src/middleware/*"
      ],
      "@model/*": [
        "src/model/*"
      ],
      "@route/*": [
        "src/route/*"
      ],
      "@schema/*": [
        "src/schema/*"
      ],
      "@type/*": [
        "src/type/*"
      ],
      "@test/*": [
        "src/test/*"
      ],
      "@util/*": [
        "src/util/*"
      ]
    }
  }
}
